<% if flash[:appearance_errors] %>
    <% flash[:appearance_errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>


<%= form_for @appearance do |f| %>

    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name %>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number %>

    <%= f.label :numeric_rating %>
    <%= f.number_field :numeric_rating %>

    <%= f.submit %>

<% end %>