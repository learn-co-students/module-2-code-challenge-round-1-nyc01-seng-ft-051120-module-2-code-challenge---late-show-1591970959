<h1> Create New Appearance <h1>

<% if flash[:appearance_errors]%>
<% flash[:appearance_errors].each do |e| %>
  <p><%= e %><p>
  <% end %>
  <% end %>

<%= form_for @appearance do |f| %>
  <%= f.label :guest_id %>
  <%= f.collection_select :guest_id, @guests, :id, :name %>

  <%= f.label :episode_id %>
  <%= f.collection_select :episode_id, @episodes, :id, :number %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.submit %>
  <% end %>

