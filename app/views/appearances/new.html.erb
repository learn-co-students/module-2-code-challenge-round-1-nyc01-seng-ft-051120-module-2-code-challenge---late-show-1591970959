<h1>Add a Guest Appearance to an Episode</h1>

<% if flash[:errors] %>
    <h2> Invalid Entry: </h2>
    <% flash[:errors].each do |error| %>
        <h3><%= error %></h3>
    <% end %>
<% end %> 



<%= form_for @appearance do |a| %>
    <%= a.label :episode %>
    <%= a.collection_select :episode_id, @episodes, :id, :number_and_date %><br>
    <%= a.label :guest %>
    <%= a.collection_select :guest_id, @guests, :id, :name_and_occupation %><br>
    <%= a.label :numeric_rating %>
    <%= a.number_field :numeric_rating %>
    <%= a.submit "Submit" %>
<% end %>