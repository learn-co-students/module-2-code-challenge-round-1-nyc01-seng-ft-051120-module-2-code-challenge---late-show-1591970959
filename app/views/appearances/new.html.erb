<% if flash[:error] %>
<%= flash[:error].each do |error| %>
<%= error %>
<% end %>
<% end %>


<%= form_for @appearance do |f| %>
<%= f.label :guest_id %>
<%= collection_select :guest, @guests, :id, :name %>

<%= f.label :episode_id %>
<%= collection_select :episode, @episodes, :id, :name %>

<%= f.label :rating %>
<%= f.number_field :rating %>
<%= f.submit %>
<% end %>

