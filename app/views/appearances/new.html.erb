<h1>Create New Appearance</h1>
<% if flash[:appearance_errors] %>
<% flash[:appearance_errors].each do |error| %>
<p><%= error %></p>
<% end %>
<% end %>

<%= form_for @appearance do |f| %>

<%=f.label :episode_id %>
<%= f.collection_select :episode_id, Episode.all, :id, :date %>

<%=f.label :guest_id %>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>

<%= f.label :rating %>
<%= f.number_field :rating, min:1, max:5 %>

<%= f.submit %>
<% end %>